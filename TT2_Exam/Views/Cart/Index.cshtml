@model List<TT2_Exam.Models.CartItemModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="mt-3 mb-3">Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    
    <div class="col-md-8 m-2 max-h-50 overflow-scroll cart-list p-2">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("_CartVideoGameCard", item)
        }
    </div>
    
    <div class="mt-4">
    <form method="post" asp-action="Checkout">
        <button type="submit" class="btn btn-lg btn-success">Confirm Purchase</button>
    </form>
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" />
}
