<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TT2_Exam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>

<div class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-1 mt-1">
            <div class="container justify-content-center">
                <div class="d-flex w-100" style="max-width: 60%;">
                    
                    <!-- Left: Logo -->
                    <div class="d-flex align-items-center me-auto">
                        <a class="navbar-brand" href="#">
                            <img src="~/img/hades-symbol.svg" alt="Logo" class="logo">
                        </a>
                    </div>
                    
                    <!-- Center: Nav links -->
                    <div class="d-flex justify-content-center align-items-center flex-grow-1">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                            <ul class="navbar-nav fw-bold fs-5">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <!-- Right: User info -->
                    <div class="d-flex align-items-center ms-auto">
                        <a class="nav-link" href="#">User</a>
                    </div>
                    
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-auto py-3">
        <div class="container">
            &copy; 2025 - TT2_Exam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>