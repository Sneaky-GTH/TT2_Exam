@model IEnumerable<UserModel>

@{
    ViewData["Title"] = "Users";
}

<h2>All Users</h2>

<table class="table table-sm">
    <thead>
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Manage Roles</a>
            </td>
        </tr>
    }
    </tbody>
</table>