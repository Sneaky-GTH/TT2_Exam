@model TT2_Exam.Models.VideoGameModel

<div class="card border-start-4 border-end-4 border-top-2 border-bottom-4 rounded-0 store-card m-2">
    <a asp-action="Details" asp-route-id="@Model.Id" class="stretched-link text-decoration-none text-reset">
        <div class="card-body d-flex flex-row justify-content-between align-items-left">
            <!-- Left side: Thumbnail -->
            <div class="d-flex flex-row flex-fill w-50">
                <img src="@Url.Content(Model.ThumbnailPath)" alt="@Model.Title" class="img-fluid rounded" style="width: 120px; height: 60px; object-fit: cover;">
                <div class="ms-3">
                    <h5 class="card-title mb-2">@Model.Title</h5>
                    <p class="card-text mb-2">$@Model.Price.ToString("F2")</p>
                </div>   
            </div>

            <!-- Right side: Text content -->
            <div class="flex-fill w-50">
                <p class="card-text text-muted mb-0">@Model.ShortDescription</p>
            </div>
        </div>
    </a>
</div>

