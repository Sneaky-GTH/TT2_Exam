@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="text-center">
        <h1 class="p-2">@ViewData["Title"]</h1>

        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="form-inline p-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link">Click here to Logout</button>
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
            }
        }
    </div>
</div>
